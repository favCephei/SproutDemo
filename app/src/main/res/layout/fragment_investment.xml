<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="studiocephei.sprouttech.FragmentOverview">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:padding="10dp"
            android:text="CHOICE IS A BEAUTIFUL THING"
            android:textSize="22dp"
            android:gravity="center"
            />

        <SeekBar
            android:id="@+id/sk_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="3"/>

        <ImageView
            android:id="@+id/img_sprout"
            android:layout_width="249dp"
            android:layout_height="284dp"
            android:src="@drawable/stable_sprout" />





        <Button
            android:id="@+id/btn_grow"
            android:background="@color/White"
            android:textColor="@color/DarkBlue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:textSize="22dp"
            android:text="GROW YOUR SPROUT"/>




    </LinearLayout>




</FrameLayout>
